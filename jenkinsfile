pipeline {
    agent any
        stages {
            stage('Git Checkout') {
                steps {
                    git 'https://github.com/AmirAyadi/SpringBootAchatJen.git'
                }
            }
            stage('Verify') {
                steps {
                    sh 'mvn -U verify -X'
                }
            }
             stage('Unit Testing') {
                steps {
                    sh 'mvn -U test -X'
                }
            }
             stage('Integration Testing') {
                steps {
                    sh 'mvn verify -DskipUnitTests -X'
                }
            }
            stage('Maven Build') {
                steps {
                    sh 'mvn clean install -X'
                }
            }
            
        }
    
}